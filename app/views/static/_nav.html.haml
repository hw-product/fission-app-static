- #@nav = nav.pages.select { |nav| nav.source == current_resource.path.split(".")[0] }[0]
- @nav = nav.pages.first
%div.nav
  %nav.navbar.navbar-default.navbar-fixed-top{ id: "nav" }
    = stylesheet_link_tag "nav"
    %div.container
      %div.navbar-header
        %button.navbar-toggle.collapsed{ "type"=>"button", "data-toggle"=>"collapse", "data-target"=>"#navbar", "aria-expanded"=>"false", "aria-controls"=>"navbar" }
          %span.sr-only= "Toggle navigation"
          - 3.times do
            %span.icon-bar
        %a.navbar-brand{ href: "/" }
          - if nav[:icon]
            %i{ class: nav.icon["class"] }
          %span= nav[:title]
      %div.navbar-collapse.collapse{ id: "navbar" }
        - unless @nav == nil
          %ul.nav.navbar-nav
            - if @nav.has_key?("options")
              - @nav.options.each do |option|
                %li
                  = render :partial => "static/elements/a", locals: { content: option }

        %ul.nav.navbar-nav.navbar-right
          - if nav.actions
            - nav.actions.each do |nav|
              - nav.options.each do |option|
                %li
                  = render :partial => "static/elements/a", locals: { content: option }
